#!/usr/bin/env ruby
# frozen_string_literal: true

require_relative '../lib/git_scripts'

def open(url)
  return false if url.blank?

  if /darwin/.match? RUBY_PLATFORM
    `open #{url}`
  else 
    puts url
  end

  true
end

url = GitScripts::OpenPullRequest.new.execute
exit 0 if open url

url = GitScripts::CreatePullRequest.new.execute
exit 0 if open url

exit 1
